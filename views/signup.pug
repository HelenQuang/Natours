extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Sign up to new account
      form.form.form--login
        .form__group
          label.form__label(for='name') Name
          input#name.form__input(type='name', placeholder='John Doe', required)
        .form__group
          label.form__label(for='role') Role
          input#role.form__input(type='role', placeholder='Specify: user, admin, lead-guide or guide')
        .form__group
          label.form__label(for='photo') Profile picture
          input#photo.form__input(type='photo', placeholder='John Doe')
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='johndoe@example.com', required)
        .form__group
          label.form__label(for='password') Password
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='password') Password confirm
          input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green Sign up